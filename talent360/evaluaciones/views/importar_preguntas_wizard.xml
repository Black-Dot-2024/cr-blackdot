<odoo>
    <record id="view_importar_preguntas_wizard" model="ir.ui.view">
        <field name="name">import.questions.wizard.form</field>
        <field name="model">importar.preguntas.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Questions from CSV">
                <div>
                    <div>Para importar preguntas de clima, llene la siguiente plantilla con los datos de los usuarios y cargue aqu√≠ el archivo CSV.</div>
                    <group class="py-3">
                        <button name="descargar_template" string="Plantilla" type="object" class="btn-primary"/>
                    </group>
                    <group>
                        <field name="nombre_archivo" invisible="1"/>
                        <field name="archivo" filename="nombre_archivo"/>
                    </group>
                </div>
                <footer>
                    <button string="Guardar" type="object" name="import_questions" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
