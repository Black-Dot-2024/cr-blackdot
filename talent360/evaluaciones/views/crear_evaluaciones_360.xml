<odoo>
    <!-- EVALUACION -->
    <record id="evaluacion_360_action" model="ir.actions.act_window">
        <field name="name">Evaluaciones 360</field>
        <field name="res_model">evaluacion</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_tipo': '360'}</field>
        <field name="view_id" ref="evaluacion_360_tree"/>
        <field name="view_id" ref= "evaluacion_360_form"/>
    </record>

    <record id="evaluacion_360_tree" model="ir.ui.view">
        <field name="name">evaluacion_360.tree</field>
        <field name="model">evaluacion</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nombre"/>
                <field name="pregunta_ids"/>
                <field name="competencia_ids"/>
                <field name="usuario_ids"/>
            </tree>
        </field>
    </record>


    <record id="evaluacion_360_form" model="ir.ui.view">
        <field name="name">evaluacion_360.form</field>
        <field name="model">evaluacion</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Evaluacion de personal">
                    <group>
                        <group>
                            <field name="nombre" field_id="nombre_0"/>
                        </group>
                        <group>
                            <group>
                                <field name="tipo" field_id="tipo_de_evaluacion_0" options="{'no_create_edit': True}"/>
                            </group>
                        </group>
                    </group>
                    <group>
                        <field name="competencia_ids" can_create="True" can_write="True" field_id="competencia_ids_0" on_change="1">
                            <tree>
                                <field name="nombre"/>
                                <field name="descripcion"/>
                                <field name="company_id"/>
                                <field name="pregunta_ids"/>
                            </tree>
                        </field>
                    </group>

                    <group>
                        <field name="pregunta_ids" domain="[('id', 'in', pregunta_ids.ids)]" readonly="true"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
