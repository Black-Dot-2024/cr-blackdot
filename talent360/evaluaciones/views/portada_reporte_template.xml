<odoo>
    <data>
        <template id="portada_reporte_template">
            <div class="page portada">
                <div class="header">
                    <h1>Software de Talento Humano</h1>
                </div>
                <div class="main-content">
                    <div class="icon">
                        <img t-att-src="'/evaluaciones/static/src/img/image.png'" alt="company logo" class="icon"/>
                    </div>
                    <h1>Reporte 
                        <span t-esc="dict(evaluacion._fields['tipo'].selection).get(evaluacion.tipo)"/>
                    </h1>
                    <h2 t-esc="evaluacion.nombre"/>
                </div>
                <br></br>
                <div class="footer">
                    <img t-att-src="'/evaluaciones/static/src/img/logo.png'" alt="company logo" class="company-logo"/>
                </div>
                <br></br>
                <h2 class="text-center">Fecha: <span t-esc="datetime.datetime.now().strftime('%Y-%m-%d')"/>
                </h2>
                <t t-call="evaluaciones.encuestas_reporte_filtros"/>
            </div>
            <style>
                @page {
                    margin: 0; /* Elimina los márgenes predeterminados de la página */
                }
                body {
                    margin: 0; /* Elimina los márgenes del cuerpo del documento */
                }
                .portada {
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    align-items: center;
                    text-align: center;
                    background-color: #f8f9fa; /* Ajusta el color de fondo según tus necesidades */
                    min-height: 85vh; /* Para que ocupe toda la altura de la página */
                    width: 90vw; /* Para que ocupe todo el ancho de la página */
                    font-family: Arial, sans-serif;
                }
                .header {
                    margin-bottom: 20px;
                }
                .icon {
                    margin: 20px 0;
                }
                .icon img {
                    height: 100px;
                }
                .main-content h1 {
                    font-size: 36px;
                }
                .main-content h3 {
                    font-size: 24px;
                }
                .footer {
                    margin-top: 20px;
                }
                .company-logo {
                    height: 100px;
                }
                .page {
                    page-break-after: always;
                }
            </style>
        </template>

        <!-- Componente de mostrar filtros  -->
        <template id="encuestas_reporte_filtros" name="Reporte: filtros seleccionados">
            <div class="py-5">
                <h3 >Filtrado por</h3>
                <table>
                    <t t-foreach="filtros.items()" t-as='item'>
                        <t t-set="filtro" t-value="item[0]"/>
                        <t t-set="valores" t-value="item[1]['valores']"/>
                        <tr>
                            <td class="text-end" style="padding-right: 15px;" t-esc="filtro + ':'"/>
                            <td class="text-start">
                                <t t-foreach="valores" t-as="valor">
                                    <span class="badge" style="background-color: #003B6E" t-esc="valor"/>
                                </t>
                            </td>
                        </tr>
                    </t>
                </table>
            </div>
        </template>
    </data>
</odoo>
